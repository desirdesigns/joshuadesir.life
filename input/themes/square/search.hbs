{{> head}}
{{> navbar}}
   <main class="main">
      <div class="main__left">
         
         {{#checkIfAll @config.custom.uploadHero @config.custom.displayHeroImage}}
            <figure class="hero__image hero__image--overlay">
               <img
                  src="{{@config.custom.uploadHero}}"
                  {{#if @config.site.responsiveImages}}
                     {{responsiveImageAttributes @config.custom.uploadHero}}
                  {{/if}}
                  {{ lazyload "eager" }}
                  {{imageDimensions @config.custom.uploadHero}}
                  alt="{{@config.custom.uploadHeroAlt}}">

               {{#if @config.custom.uploadHeroCaption}}
                  <figcaption>
                     {{@config.custom.uploadHeroCaption}}
                  </figcaption>
               {{/if}}
            </figure>
         {{/checkIfAll}}

         <header>
            <h1 class="page-header__title">
               {{ translate 'search.title' }}
            </h1>
            <p class="page-header__desc">
               {{ translate 'search.description' }}
            </p>
         </header>

      </div>
      <div class="main__right">
         <div>
               <form action="{{@website.searchUrl}}" class="search__form">
               <input
                  type="search"
                  name="{{@config.custom.searchParam}}"
                  placeholder="{{ translate 'search.placeholder' }}"
                  class="search__input"/>
               </form>

      <script>
         (function () {
               var cx = '{{@config.custom.searchId}}';
               var gcse = document.createElement('script');
               gcse.type  = 'text/javascript';
               gcse.async = true;
               gcse.src   = 'https://cse.google.com/cse.js?cx=' + cx;
               var s = document.getElementsByTagName('script')[0];
               s.parentNode.insertBefore(gcse, s);
         })();
      </script>

      <gcse:searchresults-only></gcse:searchresults-only>
               </div>
         </div>
      </main>
   {{> footer}}

